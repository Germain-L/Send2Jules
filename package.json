{
    "name": "antigravity-jules-bridge",
    "displayName": "Antigravity Jules Bridge",
    "description": "[Antigravity IDE Only] Asynchronous handoff extension to send current flow to Jules Agent.",
    "version": "1.0.0",
    "publisher": "antigravity-jules-bridge",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/google/antigravity-jules-bridge"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.git"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "julesBridge.sendFlow",
                "title": "Send to Jules"
            },
            {
                "command": "julesBridge.setApiKey",
                "title": "Set Jules API Key"
            },
            {
                "command": "julesBridge.submitPrompt",
                "title": "Validate and Send",
                "icon": "$(rocket)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "julesBridge.submitPrompt",
                    "when": "resourceFilename == JULES_PROMPT.md",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Jules Bridge",
            "properties": {
                "julesBridge.autoPush": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically commit and push WIP changes before sending to Jules."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js",
        "test:unit": "npm run compile && mocha --ui tdd --require ./out/test/unit-tests-runner.js ./out/test/suite/validators.test.js ./out/test/suite/promptGenerator.test.js ./out/test/suite/gitContext.test.js",
        "ovsx:publish": "npx ovsx publish"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "@vscode/test-electron": "^2.3.3",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "mock-require": "^3.0.3",
        "@types/mock-require": "^2.0.0",
        "sinon": "^15.2.0",
        "@types/sinon": "^10.0.15",
        "typescript": "^5.1.3"
    }
}